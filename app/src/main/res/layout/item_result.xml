<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="75dp"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="-9dp"
        android:includeFontPadding="false"
        android:paddingTop="0dp"
        android:text="Merk"
        android:textSize="35sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:includeFontPadding="false"
        android:paddingTop="0dp"
        android:text="Type"
        android:textSize="25sp"
        android:textStyle="italic" />

    <!-- Summary Section -->
    <TextView
        android:id="@+id/textViewSummaryTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Samenvatting"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="16sp"
        android:textStyle="italic" />

    <!-- Kenteken and Merk Category -->
    <TextView
        android:id="@+id/textViewCategoryBasicInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:text="Basis Informatie"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewKenteken"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kenteken"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textViewMerk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Merk:"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textViewModel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Model: "
        android:textSize="16sp" />

    <!-- General Information -->
    <TextView
        android:id="@+id/textViewCategoryModelInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:text="Algemene Informatie"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewKleur"
        android:layout_width="match_parent"
