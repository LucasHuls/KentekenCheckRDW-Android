        android:id="@+id/textViewNieuwprijs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nieuwprijs: "
        android:textSize="16sp" />

    <!-- Afmetingen Category -->
    <TextView
        android:id="@+id/textViewCategoryDimensions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:text="Afmetingen"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewVoertuigLengte"
